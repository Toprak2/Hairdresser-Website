@model Hairdresser_Website.Models.UserLogin

@{
    ViewData["Title"] = "User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <form action="@Url.Action("User", "Admin")" method="POST" class="p-4 border rounded shadow-sm" style="width: 300px; background-color: #f8f9fa;">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">User Username</label>
            <input type="email" name="Username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">Do not share your admin login information with anyone!</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">User Password</label>
            <input type="password" name="Password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>
</div>
