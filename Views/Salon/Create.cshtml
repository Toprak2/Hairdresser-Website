@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Hairdresser_Website.Models.Salon
<h2>Add Salon</h2>

<form method="post" asp-controller="Salon" asp-action="Create">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" asp-for="Name" name="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Location">Location</label>
        <input type="text" asp-for="Location" name="Location" class="form-control" required />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="WorkingHours">Working Hours</label>
        <input type="text" asp-for="WorkingHours" name="WorkingHours" class="form-control" placeholder="e.g., 09:00-18:00" required />
        <span asp-validation-for="WorkingHours" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

