@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model IEnumerable<Hairdresser_Website.Models.Service>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Services başlığı için stil */
        h2 {
            font-size: 44px;
            font-weight: bold;
            color: darkviolet;
            text-align: center;
            margin-top: 35px;
            margin-bottom: 35px;
        }

        .btn,
        .create-new-btn {
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: purple;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            display: inline-block; /* Butonlar inline-block olsun */
            transition: all 0.3s ease; /* Tüm geçişler için */
            transform: scale(1); /* Başlangıç ölçeği */
        }

        /* Create New butonu ile aynı stil */
        .create-new-btn {
            margin: 30px auto; /* Otomatik margin ile ortalama */
            padding: 20px 40px;
            font-size: 20px;
            width: auto; /* Genişliği otomatik */
            display: inline-block; /* Inline-block yaparak ortalamayı sağla */
        }

            /* Hover ve active durumunda renk değişimi ve büyüme */
            .create-new-btn:hover,
            .create-new-btn:active,
            .btn:hover,
            .btn:active {
                background-color: indigo;
                transform: scale(1); /* Boyut değişikliği olmasın */
            }

        /* Btn-warning ve btn-danger butonları için */
        .btn-warning, .btn-danger {
            background-color: purple; /* Aynı arka plan rengi */
        }

        /* Tablo için stil */
        .table {
            width: 65%; /* Tablo genişliği %65 */
            margin: 20px auto; /* Ortalamak için */
            border-collapse: collapse; /* Kenarlıkları birleştir */
        }

            .table th,
            .table td {
                border: 1px solid #ddd; /* Kenarlıklar */
                padding: 8px; /* İç boşluk */
                text-align: left;
            }

            .table th {
                background-color: #f2f2f2; /* Başlık arka plan rengi */
                font-weight: bold;
            }

            .table td a {
                text-decoration: none;
            }

        /* Centering the button using flexbox */
        .centered-div {
            display: flex;
            justify-content: center; /* Center horizontally */
            align-items: center; /* Center vertically */
        }
    </style>
</head>
<body>
    <h2>Services</h2>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Duration)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Salon)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Salon.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-warning">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-info">Detaylar</a> |
                        <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Ekleme butonu, tablo altına alındı -->
    <div class="centered-div">
        <a asp-action="Create" class="create-new-btn">Yeni servis ekle</a>
    </div>
</body>
</html>
