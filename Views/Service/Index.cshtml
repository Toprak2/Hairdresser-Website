@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model IEnumerable<Hairdresser_Website.Models.Service>

<!DOCTYPE html>
<html>
<head>
    <style>
        /* Services başlığı için stil */
        h2 {
            font-size: 44px;
            font-weight: bold;
            color: darkviolet;
            text-align: center;
            margin-top: 35px;
            margin-bottom: 35px;
        }

        /* Create New butonu için stil */
        .create-new-btn {
            display: block;
            margin: 30px auto;
            padding: 20px 40px;
            font-size: 20px;
            color: white;
            background-color: purple;
            border: none;
            border-radius: 8px;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s, transform 0.1s;
        }

            .create-new-btn:hover {
                background-color: indigo;
                transform: scale(1);
            }

        /* Edit, Details ve Delete butonları için stil */
        .btn {
            padding: 10px 20px;
            font-size: 16px;
            color: white;
            background-color: purple;
            border: none;
            border-radius: 5px;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .btn:hover {
                background-color: indigo;
            }

        .btn-warning {
            background-color: purple;
        }

        .btn-danger {
            background-color: purple;
        }

        /* Tablo için stil */
        .table {
            width: 65%; /* Tablo genişliği %65 */
            margin: 20px auto; /* Ortalamak için */
            border-collapse: collapse; /* Kenarlıkları birleştir */
        }

            .table th,
            .table td {
                border: 1px solid #ddd; /* Kenarlıklar */
                padding: 8px; /* İç boşluk */
                text-align: left;
            }

            .table th {
                background-color: #f2f2f2; /* Başlık arka plan rengi */
                font-weight: bold;
            }

            .table td a {
                text-decoration: none;
            }
    </style>
</head>
<body>
    <h2>Services</h2>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Duration)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Salon)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Duration)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Salon.Name)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-warning">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Ekleme butonu, tablo altına alındı -->
    <p>
        <a asp-action="Create" class="create-new-btn">Create New</a>
    </p>
</body>
</html>
