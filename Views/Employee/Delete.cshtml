@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@model Hairdresser_Website.Models.Service

<h2>Create Service</h2>

<p>Enter the details for the new service below:</p>

<table class="table">
    <!-- Service Name -->
    <tr>
        <th>Service Name</th>
        <td>
            <div class="form-group">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </td>
    </tr>

    <!-- Duration -->
    <tr>
        <th>Duration (in minutes)</th>
        <td>
            <div class="form-group">
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
        </td>
    </tr>

    <!-- Price -->
    <tr>
        <th>Price ($)</th>
        <td>
            <div class="form-group">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </td>
    </tr>

    <!-- Salon Selection -->
    <tr>
        <th>Select Salon</th>
        <td>
            <div class="form-group">
                <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
            </div>
        </td>
    </tr>
</table>

<form method="post" asp-action="Create">
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a href="/Service/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

